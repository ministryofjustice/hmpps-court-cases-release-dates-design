{% set pageTitle = 'Mini profile' %}
{% set activeSideNav = 'mini-profile' %}

{% set person = {
    firstName: 'FIRST',
    lastName: 'LAST',
    prisonerNumber: 'A1234BC',
    dateOfBirth: '1998-09-27',
    status: 'Released',
    prisonName: 'HMP Prison',
    cellLocation: 'A-1-1'
} %}

{% set htmlCode %}
    {% highlight "html" %}
{{ miniProfile(person, '/assets/images/prisoner-profile-image.png', '#') }}
