{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "sourceMap": true,
    "skipLibCheck": true,
    "noEmit": false,
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "typeRoots": ["./src/hmpps/@types", "./node_modules/@types"]
  },
  "exclude": [".eleventy.js", "node_modules", "src/hmpps/assets/**/*.js", "src/hmpps/filters/**/*.js", "dist", "_site"],
  "include": ["src/**/*.js", "src/**/*.ts"]
}
